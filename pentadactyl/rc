" color scheme
colorscheme solarized-light

" C command line outside of status line; T Toolbar; n tab numbers;
" r right scrollbar (as a reference point); s for status bar
set guioptions=CTnrs

" get rid of the tab bar, that is valuable space!
set showtabline=never

" load plugins that are css as well
set loadplugins='\.(css|js|penta)$'

" limit number of items displayed on commandline at once (default is 20)
set maxitems=25

" limit number of (error and info) messages stored in history (default is 100)
set messages=500

" number of lines to scroll with <C-d>/<C-u> (0 means it scrolls half the window at a time)
set scroll=0

" Maximum number of Ex commands and find patterns to store in the command-line history
set history=10000

" show URLs of links (on hover or other focus) in command line
set showstatuslinks='command'

" keep hints on home row
set hintkeys=alskdjfhg
hi -a Hint font-size: 9pt !important;

" use sublime as editor (see C-i)
set editor='/usr/bin/subl3 -n -w <file>:<line>:<column>'


" What, I don't already know I'm running Pentadactyl?
set titlestring=Mozilla\ Firefox

" show highlights when searching
set hlfind

" search incrementally
set incfind

" ignore case in searches unless caps are entered in search term
set findcase=smart


" completions s=search l=location bar h=history b=bookmarks f=file
set complete=slf

" if one match, show it; if more list all matches until longest common
set wildmode=list:full


" Yank page URL
javascript <<EOF
function copytitle() {
  var buffertitle = buffer.title;
  dactyl.clipboardWrite(buffertitle, true);
}
EOF

map -g user Y -s -js copytitle()

" Smart reload
command smartReload -js <<EOF
if (buffer.URL.spec.indexOf('#') >= 0) {
  dactyl.execute("reload");
} else {
  dactyl.open(buffer.URL.spec);
}
EOF
nmap -builtin r :smartReload<CR>

" Flush browser dns
command flushdns set! network.dnsCacheExpiration=0 | set! network.dnsCacheExpiration&


" Relax on the focus
set strictfocus=*:laissez-faire
set strictfocus+=twitter.com:despotic
set strictfocus+=facebook.com:despotic

" Pass through <CR> to avoid stupid extra-linebreak behavior in input-fields
set passkeys+=facebook.com:<CR>
set passkeys+=github.com:<CR>


" load bootstrap file
source ~/.pentadactyl/bootstrap

" load custom css files
source ~/.pentadactyl/user.css


" vim: ft=vim fdm=marker:
